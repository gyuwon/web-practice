@{
    Layout = "~/Views/Angular/_Layout.cshtml";
    ViewBag.Title = "Step02";
}

<div ng-controller="PhoneListCtrl">
    <ul>
        <li ng-repeat="phone in phones">
            {{phone.name}}
            <p>{{phone.snippet}}</p>
        </li>
    </ul>
    <p>Total number of phones: {{phones.length}}</p>
    <p>{{hello}}</p>
    <table>
        <tr><th>row number</th></tr>
        <tr ng-repeat="i in [0, 1, 2]"><td>{{i + 1}}</td></tr>
    </table>
</div>

@section scripts {
    @Scripts.Render("~/Scripts/Angular/Step02.js")
    <script type="text/javascript">
        $('html').attr('ng-app', 'phonecatApp');
    </script>
}
